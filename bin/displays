#!/bin/bash

# Uncomment and modify the lines below to configure monitors.
# xrandr --current

function split_screen() {
  output=$1

  xrandr --setmonitor $output~1 960/238x1080/134+0+0 HDMI-1
  xrandr --setmonitor $output~2 960/238x1080/134+960+0 none
  i3-msg restart > /dev/null
}

function unsplit_screen() {
  output=$1

  xrandr --delmonitor $1~2
  xrandr --delmonitor $1~1
  i3-msg restart > /dev/null
}

if [ "$(hostname -s)" == "quixote" ]; then
  if [ "$1" == "dock-hp" ]; then
    xrandr --output DP-2-1 --auto
    xrandr --output DP-2-1 --right-of eDP-1 # HDMI
    xrandr --output DP-2-1 --primary
  elif [ "$1" == "off" ]; then
    xrandr --output eDP-1 --primary
    xrandr --output DP-2-1 --off
  fi
elif [ "$(hostname -s)" == "remind" ]; then
  if [ "$1" == "dock-hp" ]; then
    xrandr --output DP-2-1 --auto
    xrandr --output DP-2-1 --right-of eDP-1 # HDMI
    xrandr --output DP-2-1 --primary
  elif [ "$1" == "hp" ]; then
    xrandr --output HDMI-2 --auto
    xrandr --output HDMI-2 --right-of eDP-1 # HDMI
    xrandr --output HDMI-2 --primary
  elif [ "$1" == "off" ]; then
    xrandr --output eDP-1 --primary
    xrandr --output HDMI-2 --off
    xrandr --output DP-2-1 --off
  fi
elif [ "$(hostname -s)" == "ingrid" ]; then
  if [ "$1" == "home" ]; then
    xrandr --output HDMI1 --mode 1920x1080
    xrandr --output HDMI2 --mode 1920x1080
    xrandr --output HDMI1 --right-of HDMI2
    xrandr --output HDMI2 --primary
  elif [ "$1" == "split" ]; then
    split_screen "HDMI-1"
  elif [ "$1" == "unsplit" ]; then
    unsplit_screen "HDMI-1"
  else
    xrandr --current
  fi
fi


